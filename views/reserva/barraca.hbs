<div class="container">
  <div class="row">
    <div class="col-12 col-sm-6 offset-sm-3 col-md-6 offset-md-3 col-lg-4 offset-lg-4 col-xl-4 offset-xl-4 mt-3">
      <form action="/reserva/{{beachStand._id}}" method="POST" id="solicitar">
        <div class="card">
          <figure class="figure">
            <img src="{{beachStand.imgPath}}" class="card-img-top figure-img rounded"
              alt="Barraca Picture">
          </figure>
          <div class="card-body">
            <h6 class="card-title">{{beachStand.name}}</h6>
            <p class="card-text"><small>{{beachStand.description}}</small></p>
          </div>
          <ul class="list-group list-group-flush" id="barraca-services">
            <li class="list-group-item">
              <div class="row form-group d-flex flex-row flew-wrap align-items-center">
                <div class="col-7 col-sm-5 col-md-7 col-lg-6 col-xl-7">
                  <span id="barraca-valor" class="d-inline-block servicos text-center">
                    <i class="fas fa-umbrella-beach"></i>
                  </span> Barraca <small>(R$ {{beachStand.products.barraca.price}},00)</small>
                </div>
                <div class="col-5 col-sm-7 col-md-5 col-lg-6 col-xl-5">
                  <div class="input-group input-group-sm">
                    <div class="input-group-prepend">
                      <button class="btn btn-outline-secondary decreaseOne" type="button"
                        onclick="removeOne('barraca-serv');"><i class="fas fa-minus"></i></button>
                    </div>
                    <input type="number" name="barracaPrice" value="{{beachStand.products.barraca.price}}" hidden>
                    <input type="number" name="barraca" id="barraca-serv" class="form-control text-center" min="0"
                      value="0">
                    <div class="input-group-append">
                      <button class="btn btn-outline-secondary increaseOne" type="button"
                        onclick="addOne('barraca-serv');"><i class="fas fa-plus"></i></button>
                    </div>
                  </div>
                </div>
              </div>
            </li>
            <li class="list-group-item">
              <div class="row form-group d-flex flex-row align-items-center">
                <div class="col-7 col-sm-5 col-md-7 col-lg-6 col-xl-7">
                  <span class="d-inline-block servicos text-center">
                    <i class="fas fa-chair"></i>
                  </span> Cadeira <small>(R$ {{beachStand.products.cadeira.price}},00)</small>
                </div>
                <div class="col-5 col-sm-7 col-md-5 col-lg-6 col-xl-5">
                  <div class="input-group input-group-sm">
                    <div class="input-group-prepend">
                      <button class="btn btn-outline-secondary decreaseOne" type="button"
                        onclick="removeOne('cadeira-serv');"><i class="fas fa-minus"></i></button>
                    </div>
                    <input type="number" name="cadeiraPrice" value="{{beachStand.products.cadeira.price}}" hidden>
                    <input type="number" name="cadeira" id="cadeira-serv" class="form-control text-center" min="0"
                      value="0">
                    <div class="input-group-append">
                      <button class="btn btn-outline-secondary increaseOne" type="button"
                        onclick="addOne('cadeira-serv');"><i class="fas fa-plus"></i></button>
                    </div>
                  </div>
                </div>
              </div>
            </li>
          </ul>
        </div>

        <div class="card-body text-center">
          <button type="submit" class="btn btn-xs btn-outline-success">Solicitar</button>
        </div>
        {{#if message}}
          <p>{{message}}</p>
        {{/if}}
      </form>
    </div>
  </div>
</div>



<script>
  function addOne(serviceId) {
    if (document.getElementById(serviceId).value >= 0) {
      let count = parseInt(document.getElementById(serviceId).value, 10);
      count += 1;
      return document.getElementById(serviceId).value = count.toString();
    }
  }

  function removeOne(serviceId) {
    if (document.getElementById(serviceId).value > 0) {
      let count = parseInt(document.getElementById(serviceId).value, 10);
      count -= 1;
      return document.getElementById(serviceId).value = count.toString();
    }
  }
</script>