<div class="container">
  <div class="row">
    <div class="col-12 col-sm-12 col-md-12 col-lg-10 offset-lg-1 col-xl-8 offset-xl-2 mt-3 border-bottom pb-2">
      <h6 class="text-uppercase">Edição de Produtos</h6>
    </div>
  </div>
  <form action="/edit/produtos/{{answer._id}}" method="POST">
    <div class="row">
      <div class="col-12 col-sm-12 col-md-12 col-lg-10 offset-lg-1 col-xl-8 offset-xl-2 mt-3">
        <h6 class="pb-2">Meus Produtos</h6>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">
            <div class="row form-group d-flex flex-row flew-wrap align-items-center mb-0">
              <div class="col-4 col-sm-6 col-md-8 col-lg-8 col-xl-8">
                <span id="barraca-valor" class="d-inline-block servicos text-center">
                  <i class="fas fa-umbrella-beach"></i>
                </span> Barraca
              </div>
              <div class="col-4 col-sm-3 col-md-2 col-lg-2 col-xl-2">
                <div class="input-group input-group-sm">
                  <div class="input-group-prepend">
                    <span class="input-group-text">Qt.</span>
                  </div>
                  <input type="number" name="barracaAmount" class="form-control text-center" min="0"
                    value="{{answer.barraca.amount}}">
                </div>
              </div>
              <div class="col-4 col-sm-3 col-md-2 col-lg-2 col-xl-2">
                <div class="input-group input-group-sm">
                  <div class="input-group-prepend">
                    <span class="input-group-text">R$</span>
                  </div>
                  <input type="number" name="barracaPrice" class="form-control text-center" min="0"
                    value="{{answer.barraca.price}}">
                </div>
              </div>
            </div>
          </li>
          <li class="list-group-item">
            <div class="row form-group d-flex flex-row align-items-center mb-0">
              <div class="col-4 col-sm-6 col-md-8 col-lg-8 col-xl-8">
                <span class="d-inline-block servicos text-center">
                  <i class="fas fa-chair"></i>
                </span> Cadeira
              </div>
              <div class="col-4 col-sm-3 col-md-2 col-lg-2 col-xl-2">
                <div class="input-group input-group-sm">
                  <div class="input-group-prepend">
                    <span class="input-group-text">Qt.</span>
                  </div>
                  <input type="number" name="cadeiraAmount" class="form-control text-center" min="0"
                    value="{{answer.cadeira.amount}}">
                </div>
              </div>
              <div class="col-4 col-sm-3 col-md-2 col-lg-2 col-xl-2">
                <div class="input-group input-group-sm">
                  <div class="input-group-prepend">
                    <span class="input-group-text">R$</span>
                  </div>
                  <input type="number" name="cadeiraPrice" class="form-control text-center" min="0"
                    value="{{answer.cadeira.price}}">
                </div>
              </div>
            </div>
          </li>
        </ul>
      </div>
    </div>
    <div class="row">
      <div class="col-12 col-sm-12 col-md-12 col-lg-10 offset-lg-1 col-xl-8 offset-xl-2">
        <hr>
        <div class="form-group text-center">
          <button type="submit" class="btn btn-outline-info">Salvar</button>
        </div>
      </div>
    </div>
  </form>
</div>