<div class="container">
  <div class="row">
    <div class="col-12 col-sm-12 col-md-12 col-lg-10 offset-lg-1 col-xl-8 offset-xl-2 mt-3 border-bottom pb-2">
      <h6 class="text-uppercase font-weight-bold">Cadastro de Barraca</h6>
    </div>
  </div>
  <form action="/cadastro" method="POST" enctype="multipart/form-data">
    <div class="row">
      <div class="col-12 col-sm-12 col-md-12 col-lg-10 offset-lg-1 col-xl-8 offset-xl-2 mt-3 border-bottom pb-3">
        <input type="text" name="id" value="{{answer.id}}" hidden>
        <div class="form-group">
          <label class="font-weight-bold" for="barraca">Nome da Barraca</label>
          <input type="text" class="form-control" name="name" id="barraca" aria-describedby="barracaalert"
            placeholder="Nome da Barraca">
        </div>
        <div class="form-group">
          <label class="font-weight-bold" for="foto-barraca">Foto da Barraca</label>
          <div class="input-group">
            <div class="input-group-prepend">
              <span class="input-group-text" id="foto-barraca-upload">Upload</span>
            </div>
            <div class="custom-file">
              <input type="file" name="imgPath" class="custom-file-input" id="foto-barraca"
                aria-describedby="foto-barraca">
              <label class="custom-file-label" for="foto-barraca">Choose file</label>
            </div>
          </div>
        </div>
        <div class="form-group">
          <label class="font-weight-bold" for="username">Posicione o marcador no local onde fica sua barraca.</label>
          <div id="googlemap" class="border"></div>
          <input type="text" class="form-control" name="longitude" id="longitude" aria-describedby="longitudealert"
            placeholder="Longitude" hidden>
          <input type="text" class="form-control" name="latitude" id="latitude" aria-describedby="latitudealert"
            placeholder="Latitude" hidden>
        </div>
        <div class="form-group">
          <label class="font-weight-bold" for="username">Apresenta√ßao</label>
          <div class="input-group">
            <textarea name="description" class="form-control" aria-label="With textarea"></textarea>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-12 col-sm-12 col-md-12 col-lg-10 offset-lg-1 col-xl-8 offset-xl-2 mt-3">
        <div class="form-group text-center">
          <button type="submit" class="btn btn-outline-info">Salvar</button>
        </div>
      </div>
    </div>
  </form>
</div>