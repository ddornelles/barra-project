<div class="row">
  <div class="col-12 mt-3">
    <div class="alert alert-danger text-center" role="alert">Voce ainda nao tem nenhuma barraca cadastrada.</div>
    <div class="text-center">
      <button type="submit" class="btn btn-sm btn-outline-success" data-toggle="modal"
        data-target="#add-barraca">Cadastrar</button>
    </div>
  </div>
</div>

<div class="modal fade" id="add-barraca" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <form action="/signup" method="GET">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Cadastro de Barraca</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <form action="/" method="POST">
            <div class="form-group">
              <label for="username">Nome da Barraca</label>
              <input type="text" class="form-control" id="username" aria-describedby="usernamealert"
                placeholder="Nome da Barraca">
            </div>
            <div class="form-group">
              <label for="foto-barraca">Foto da Barraca</label>
              <div class="input-group">
                <div class="input-group-prepend">
                  <span class="input-group-text" id="foto-barraca-upload">Upload</span>
                </div>
                <div class="custom-file">
                  <input type="file" class="custom-file-input" id="foto-barraca" aria-describedby="foto-barraca">
                  <label class="custom-file-label" for="foto-barraca">Choose file</label>
                </div>
              </div>
            </div>
            <div class="form-group">
              <label for="username">Localizaçao</label>
              <div class="mapouter">
                <div class="gmap_canvas"><iframe id="gmap_canvas"
                    src="https://maps.google.com/maps?q=Barraca%20da%20Claudia%2C%20Ipanema&t=&z=17&ie=UTF8&iwloc=&output=embed"
                    frameborder="0" scrolling="no" marginheight="0" marginwidth="0"></iframe><a
                    href="https://www.maps-erstellen.de"></a></div>
              </div>
            </div>
            <div class="form-group">
              <label for="username">Apresentaçao</label>
              <div class="input-group">
                <textarea class="form-control" aria-label="With textarea"></textarea>
              </div>
            </div>
          </form>
          <div class="modal-footer">
            <button type="submit" class="btn btn-info">Salvar</button>
          </div>
      </form>
    </div>
  </div>
</div>