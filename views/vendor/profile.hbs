<div class="container">
  <div class="row">
    {{#if flag}}
    <div class="col-12 mt-3">
      <div class="alert alert-danger text-center" role="alert">Voce ainda nao tem nenhuma barraca cadastrada.</div>
      <div class="text-center">
        <a href="/cadastro" role="button" class="btn btn-sm btn-outline-success">Cadastrar</a>
      </div>
    </div>
    {{/if}}
  </div>

  {{#if profileFlag}}
  <div class="row">
    <div class="col-12 mt-3 border-bottom pb-2 d-flex justify-content-between align-items-center">
      <h6 class="text-uppercase">Meu Perfil</h6><a href="/edit" class="badge badge-warning">Edit</a>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
      <div class="d-flex flex-row justify-content-center">
        <div class="d-flex flex-column">
          <figure id="profile-pic" class="figure text-center">
            <img src="{{answer.imgPath}}" class="figure-img rounded-circle objCover" alt="Profile Picture">
          </figure>
          <h6 class="mt-2 text-center">{{answer.name}}</h6>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-12 pb-2 border-bottom d-flex justify-content-between align-items-center">
      <h6 class="text-uppercase">Minha Barraca</h6><a href="/barraca/edit/{{answer._id}}" class="badge badge-warning">Edit</a>
    </div>
  </div>
  <div class="row">
    <div class="col-6 col-sm-6 col-md-4 col-lg-6 col-xl-6 mt-3">
      <div class="card-deck">
        {{#each result}}
        <a href="/reserva/vendor/{{_id}}" class="text-decoration-none">
          <div class="card">
            <img src="{{imgPath}}" class="card-img-top" alt="...">
            <div class="card-body">
              <h6 class="card-title">{{name}}</h6>
              <p class="card-text">Descrição resumida da barraca</p>
            </div>
          </div>
        </a>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12 mt-3">
      <div class="col-12 pb-2 border-bottom d-flex justify-content-between align-items-center">
        <h6 class="text-uppercase">Meus Produtos</h6>
        <span><a href="/cadastro/produtos/{{_id}}" class="badge badge-success">Add</a></span>
      </div>
      {{/each}}
      <ul class="list-group list-group-flush">
        {{#if productFlag}}
        <li class="list-group-item">
          <div class="d-flex flex-row flew-wrap align-items-center">
            <div class="col-6 col-sm-6 col-md-8 col-lg-8 col-xl-8 mb-1">
              <span id="barraca-valor" class="d-inline-block text-center">
                <i class="fas fa-umbrella-beach"></i>
              </span> Barraca
            </div>
            <div class="col-3 col-sm-3 col-md-2 col-lg-2 col-xl-2">
              {{#each result}}
              <p>Qt. {{products.barraca.amount}}</p>
              {{/each}}
            </div>
            <div class="col-3 col-sm-3 col-md-2 col-lg-2 col-xl-2">
              {{#each result}}
              <p>R$ {{products.barraca.price}},00</p>
              {{/each}}
            </div>
          </div>
        </li>
        <li class="list-group-item">
          <div class="d-flex flex-row align-items-center">
            <div class="col-6 col-sm-6 col-md-8 col-lg-8 col-xl-8 mb-1">
              <span class="d-inline-block text-center">
                <i class="fas fa-chair"></i>
              </span> Cadeira
            </div>
            <div class="col-3 col-sm-3 col-md-2 col-lg-2 col-xl-2">
              {{#each result}}
              <p>Qt. {{products.cadeira.amount}}</p>
              {{/each}}
            </div>
            <div class="col-3 col-sm-3 col-md-2 col-lg-2 col-xl-2">
              {{#each result}}
              <p>R$ {{products.cadeira.price}},00</p>
              {{/each}}
            </div>
          </div>
        </li>
        <li class="list-group-item d-flex flex-row justify-content-end">
          {{#each result}}
          <a href="/edit/produtos/{{products._id}}" class="badge badge-warning">Edit</a>
          {{/each}}
        </li>
        {{/if}}
      </ul>
    </div>
  </div>
  {{/if}}
</div>