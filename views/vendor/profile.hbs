<div class="container">
  <div class="row">
    {{#if flag}}
    <div class="col-12 mt-3">
      <div class="alert alert-danger text-center" role="alert">Voce ainda nao tem nenhuma barraca cadastrada.</div>
      <div class="text-center">
        <a href="/cadastro" role="button" class="btn btn-sm btn-outline-success">Cadastrar</a>
      </div>
    </div>
    {{/if}}
  </div>

  <div class="row">
    <div class="col-12 mt-3 border-bottom pb-2 d-flex justify-content-between align-items-center">
      <h6>Meu Perfil (Vendor)</h6><a href="/vendor/edit" class="badge badge-warning">Edit</a>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-12 col-sm-12 col-md-10 offset-md-1 col-lg-8 offset-lg-2 col-xl-8 offset-xl-2">
      <div class="d-flex flex-column text-center">
        <figure class="figure">
          <img src="https://via.placeholder.com/75" class="figure-img rounded-circle" alt="Profile Picture">
        </figure>
        <h6>Username </h6>
      </div>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-12 col-sm-4 col-md-3 col-lg-3 col-xl-2">
      <h6>Nome</h6>
      <p>Nome</p>
    </div>
    <div class="col-12 col-sm-8 col-md-4 col-lg-3 col-xl-3">
      <h6>Sobrenome</h6>
      <p>Sobrenome</p>
    </div>
    <div class="col-12 col-sm-4 col-md-3 col-lg-2 col-xl-2">
      <h6>CPF</h6>
      <p>000.000.000-00</p>
    </div>
    <div class="col-3 col-sm-2 col-md-4 col-lg-3 col-xl-1">
      <h6>Age</h6>
      <p>00</p>
    </div>
    <div class="col-4 col-sm-3 col-md-4 col-lg-3 col-xl-2">
      <h6>Gender:</h6>
      <p>Male</p>
    </div>
    <div class="col-5 col-sm-3 col-md-4 col-lg-3 col-xl-2">
      <h6>Cellphone</h6>
      <p>(--) ----- ----</p>
    </div>
    <div class="col-12 col-sm-6 col-md-4 col-lg-3 col-xl-6">
      <h6>Email address</h6>
      <p>email@email.com</p>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col-12 pb-2 border-bottom d-flex justify-content-between align-items-center">
      <h6>Minha Barraca</h6><a href="/vendor/edit-barraca" class="badge badge-warning">Edit</a>
    </div>
  </div>
  <div class="row">
    <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12 mt-3">
      <div class="card-deck">
        {{#each result}}
        <div class="card">
          <img src="{{imgPath}}" class="card-img-top" alt="...">
          <div class="card-body">
            <h6 class="card-title">{{name}}</h6>
            <p class="card-text">Descrição resumida da barraca</p>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12 mt-3">
      <h6 class="pb-2">Meus Produtos</h6>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">
          <div class="d-flex flex-row flew-wrap align-items-center">
            <div class="col-6 col-sm-6 col-md-8 col-lg-8 col-xl-8 mb-1">
              <span id="barraca-valor" class="d-inline-block text-center">
                <i class="fas fa-umbrella-beach"></i>
              </span> Barraca
            </div>
            <div class="col-3 col-sm-3 col-md-2 col-lg-2 col-xl-2">
              <p>Qt. 00</p>
            </div>
            <div class="col-3 col-sm-3 col-md-2 col-lg-2 col-xl-2">
              <p>R$ 00,00</p>
            </div>
          </div>
        </li>
        <li class="list-group-item">
          <div class="d-flex flex-row align-items-center">
            <div class="col-6 col-sm-6 col-md-8 col-lg-8 col-xl-8 mb-1">
              <span class="d-inline-block text-center">
                <i class="fas fa-chair"></i>
              </span> Cadeira
            </div>
            <div class="col-3 col-sm-3 col-md-2 col-lg-2 col-xl-2">
              <p>Qt. 00</p>
            </div>
            <div class="col-3 col-sm-3 col-md-2 col-lg-2 col-xl-2">
              <p>R$ 00,00</p>
            </div>
          </div>
        </li>
      </ul>
    </div>
  </div>
</div>