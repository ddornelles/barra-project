<div class="container">
  <div class="row">
    <div class="col-12 mt-3 border-bottom pb-2">
      <h6>Cadastro de Produtos</h6>
    </div>
  </div>
  <form action="/cadastro/produtos/{{barracaId}}" method="POST">
    <div class="row">
      <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12 mt-3">
        <h6 class="pb-2">Meus Produtos</h6>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">
            <div class="row form-group d-flex flex-row flew-wrap align-items-center">
              <div class="col-12 col-sm-5 col-md-7 col-lg-6 col-xl-7 mb-1">
                <span id="barraca-valor" class="d-inline-block servicos text-center">
                  <i class="fas fa-umbrella-beach"></i>
                </span> Barraca
              </div>
              <div class="col-6 col-sm-7 col-md-5 col-lg-6 col-xl-5">
                <div class="input-group input-group-sm">
                  <div class="input-group-prepend">
                    <span class="input-group-text">Qt.</span>
                  </div>
                  <input type="number" name="barracaAmount" class="form-control text-center" min="0"
                    value="0">
                </div>
              </div>
              <div class="col-6 col-sm-7 col-md-5 col-lg-6 col-xl-5">
                <div class="input-group input-group-sm">
                  <div class="input-group-prepend">
                    <span class="input-group-text">R$</span>
                  </div>
                  <input type="number" name="barracaPrice" class="form-control text-center" min="0"
                    value="0">
                </div>
              </div>
            </div>
          </li>
          <li class="list-group-item">
            <div class="row form-group d-flex flex-row align-items-center">
              <div class="col-12 col-sm-5 col-md-7 col-lg-6 col-xl-7 mb-1">
                <span class="d-inline-block servicos text-center">
                  <i class="fas fa-chair"></i>
                </span> Cadeira
              </div>
              <div class="col-6 col-sm-7 col-md-5 col-lg-6 col-xl-5">
                <div class="input-group input-group-sm">
                  <div class="input-group-prepend">
                    <span class="input-group-text">Qt.</span>
                  </div>
                  <input type="number" name="cadeiraAmount" class="form-control text-center" min="0"
                    value="0">
                </div>
              </div>
              <div class="col-6 col-sm-7 col-md-5 col-lg-6 col-xl-5">
                <div class="input-group input-group-sm">
                  <div class="input-group-prepend">
                    <span class="input-group-text">R$</span>
                  </div>
                  <input type="number" name="cadeiraPrice" class="form-control text-center" min="0"
                    value="0">
                </div>
              </div>
            </div>
          </li>
        </ul>
      </div>
    </div>
    <div class="row">
      <div class="col-12">
        <hr>
        <div class="form-group text-center">
          <button type="submit" class="btn btn-outline-info">Salvar</button>
        </div>
      </div>
    </div>
  </form>
</div>