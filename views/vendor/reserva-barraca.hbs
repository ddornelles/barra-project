  <script>
    function addOne(serviceId) {
      if (document.getElementById(serviceId).value >= 0) {
        let count = parseInt(document.getElementById(serviceId).value, 10);
        count += 1;
        return document.getElementById(serviceId).value = count.toString();
      }
    }

    function removeOne(serviceId) {
      if (document.getElementById(serviceId).value > 0) {
        let count = parseInt(document.getElementById(serviceId).value, 10);
        count -= 1;
        return document.getElementById(serviceId).value = count.toString();
      }
    }

    function solicitar() {
      const swalWithBootstrapButtons = Swal.mixin({
        customClass: {
          confirmButton: 'btn btn-sm btn-success mr-3',
          cancelButton: 'btn btn-sm btn-danger ml-3'
        },
        buttonsStyling: false,
      })

      swalWithBootstrapButtons.fire({
        title: 'Are you sure?',
        text: "You will be charged for this!",
        type: 'warning',
        showCancelButton: true,
        confirmButtonText: 'YES',
        cancelButtonText: 'NO'
      }).then((result) => {
        if (result.value) {
          swalWithBootstrapButtons.fire(
            'Ordered!',
            'Your order has been made.',
            'success'
          )
        }
      })
    }
  </script>