<div class="container">
  <div class="row">
    <div class="col-8 offset-2 mt-3">
      <form action="/login" method="POST">
        <div class="form-group">
          <label for="email">Email</label>
          <input type="text" name="username" class="form-control" id="email" aria-describedby="emailalert"
            placeholder="Write your email">
        </div>
        <div class="form-group">
          <label for="exampleInputPassword1">Password</label>
          <input type="password" name="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
        </div>
        {{#if message}}
          <div class="alert alert-danger" role="alert">{{ message }}</div>
        {{/if}}
        <div class="form-group text-center">
          <button type="submit" class="btn btn-info" id="login">Login</button>
          <small class="form-text">
            <p class="account-message">Doesn't have an account? <a href="/signup">Signup</a></p>
          </small>
          {{!-- <button type="submit" class="btn btn-sm bg-secondary"><i class="fab fa-google"></i></button>
          <button type="submit" class="btn btn-sm bg-secondary"><i class="fab fa-facebook-f"></i></button>
          <button type="submit" class="btn btn-sm bg-secondary"><i class="fab fa-twitter"></i></button> --}}
        </div>
      </form>
    </div>
  </div>
</div>