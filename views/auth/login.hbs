<div class="container">
  <div class="row">
    <div class="col-12 col-sm-12 col-md-12 col-lg-10 offset-lg-1 col-xl-8 offset-xl-2 mt-3">
      <form action="/login" method="POST">
        <div class="row">
          <div class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-6">
            <div class="form-group">
              <label for="email">Email</label>
              <input type="text" name="username" class="form-control" id="email" aria-describedby="emailalert"
                placeholder="Your email">
            </div>
          </div>
          <div class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-6">
            <div class="form-group">
              <label for="exampleInputPassword1">Password</label>
              <input type="password" name="password" class="form-control" id="exampleInputPassword1" placeholder="Your password">
            </div>
          </div>
          <div class="col-12 col-sm-12 col-md-6 offset-md-3 col-lg-6 offset-lg-3 col-xl-6 offset-xl-3 text-center">
            {{#if message}}
              <div class="alert alert-danger" role="alert">{{ message }}</div>
            {{/if}}
          </div>
          <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12 mt-3">
            <div class="form-group text-center">
              <button type="submit" class="btn btn-info" id="login">Login</button>
              <small class="form-text">
                <p class="account-message">Doesn't have an account? <a href="/signup" class="text-no-decoration text-dark">Signup</a>.</p>
              </small>
              {{!-- <button type="submit" class="btn btn-sm bg-secondary"><i class="fab fa-google"></i></button>
              <button type="submit" class="btn btn-sm bg-secondary"><i class="fab fa-facebook-f"></i></button>
              <button type="submit" class="btn btn-sm bg-secondary"><i class="fab fa-twitter"></i></button> --}}
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>