<div class="container">
  <div class="row">
    <div class="col-12 col-sm-12 col-md-12 col-lg-10 offset-lg-1 col-xl-8 offset-xl-2 mt-3 d-flex justify-content-between align-items-center">
      <h6 class="text-uppercase font-weight-bold">Meu Perfil</h6><a href="/edit" class="badge badge-warning">Edit</a>
    </div>
  </div>
  <div class="row">
    <div class="col-12 col-sm-12 col-md-12 col-lg-10 offset-lg-1 col-xl-8 offset-xl-2">
      <hr>
      <div class="d-flex flex-row justify-content-center">
        <div class="d-flex flex-column text-center">
          <figure id="profile-pic" class="figure">
            <img src="{{answer.imgPath}}" class="figure-img rounded-circle objCover" alt="Profile Picture">
          </figure>
          <h6 class="mt-2">{{answer.name}}</h6>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-12 col-sm-12 col-md-12 col-lg-10 offset-lg-1 col-xl-8 offset-xl-2">
      <h6 class="text-uppercase font-weight-bold">Meus Dados</h6>
      <hr>
    </div>
    <div class="col-2 col-sm-2 col-md-1 col-lg-1 offset-lg-1 col-xl-1 offset-xl-2">
      <h6 class="font-weight-bold">Age</h6>
      <p>{{answer.age}}</p>
    </div>
    <div class="col-2 col-sm-2 col-md-1 col-lg-1 col-xl-1">
      <h6 class="font-weight-bold">Title</h6>
      <p>{{answer.title}}</p>
    </div>
    <div class="col-8 col-sm-8 col-md-3 col-lg-2 col-xl-2">
      <h6 class="font-weight-bold">Cellphone</h6>
      <p>{{answer.contact}}</p>
    </div>
    <div class="col-12 col-sm-12 col-md-4 col-lg-6 col-xl-4">
      <h6 class="font-weight-bold">Email address</h6>
      <p>{{answer.username}}</p>
    </div>
  </div>

  <div class="row">
    <div class="col-12 col-sm-12 col-md-12 col-lg-10 offset-lg-1 col-xl-8 offset-xl-2">
      <h6 class="text-uppercase font-weight-bold">Minhas Reservas</h6>
      <hr>
    </div>
    <div class="col-12 col-sm-12 col-md-12 col-lg-10 offset-lg-1 col-xl-8 offset-xl-2">
      <div class="card-deck">
        {{#if reserva}}
        {{#each reserva}}
        <div class="col-12 col-sm-6 col-md-6 col-lg-6 col-xl-6 mb-4">
          <div class="card">
            {{#each business}}
            <img src="{{imgPath}}" class="card-img-top" alt="...">
            <div class="card-body">
              <h6 class="card-title">{{name}}</h6>
              <p class="card-text">{{description}}</p>
              <p class="card-text d-flex flex-row justify-content-between">
                <a href="/reserva" class="badge badge-dark">Em andamento</a>
              </p>
            </div>
            {{/each}}
          </div>
        </div>
        {{/each}}
        {{/if}}
      </div>
    </div>
  </div>
</div>